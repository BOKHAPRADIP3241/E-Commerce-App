<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrationavtivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textSize="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/edittxt11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/login"
        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="enter name"
        android:textSize="30dp"></EditText>

    <EditText
        android:id="@+id/edittxt12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/login"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="enter email"
        android:textSize="30dp"></EditText>


    <EditText
        android:id="@+id/edittxt13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login"
        android:layout_marginRight="45dp"
        android:drawableLeft="@drawable/baseline_remove_red_eye_24"
        android:hint="enter password"
        android:textSize="30dp"></EditText>\

    <Button
        android:id="@+id/buton1"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="sign up"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:backgroundTint="#7345B8"></Button>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="already account?click login"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"></TextView>





</LinearLayout>